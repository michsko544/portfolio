import teamfood from "src/assets/teamfood.jpg";
import CirclesAim from "src/components/CirclesAim.astro";


const chipText = "PORTFOLIO";
const pageTitle = "Realized projects";

const projects = [
  {
    index: "01",
    title: "WaveMed Agency",
    chips: ["NEXT.JS", "REACT", 'SCSS', "GRAPHQL", "HYGRAPH", "GRAPHQL-CODEGEN"],
    year: "2024",
    role: "Fullstack",
    image: wavemedWebsite,
    url: "https://www.wavemed.eu/en"
  },
  {
    index: "02",
    title: "Order-food App",
    chips: ["REACT", "CREATE REACT APP", 'MUI', 'STYLED-COMPONENTS', "FORMIK", "FIREBASE", "PWA"],
    year: "2020",
    role: "Frontend",
    image: teamfood,
    url: 'https://github.com/michsko544/haktyki2020'
  },
  {
    index: "03",
    title: "Cake E-commerce Website",
    chips: ["NUXT.JS", "VUE", 'SCSS', "VUEX"],
    year: "2021",
    role: "Frontend",
    image: cakeShop,
    url: "https://github.com/michsko544/smooth-shop"
  },
  {
    index: "04",
    title: "Freelancer Platform",
    chips: ["REACT", "CREATE REACT APP", 'STYLED-COMPONENTS', "FORMIK"],
    year: "2020",
    role: "Fullstack",
    image: freelancerPlatform,
    url: "https://github.com/michsko544/notiwo-frontend"
  },
]

---

<section id="projects" class="contentSection">
  <div class="flex flex-col gap-12">
    <PageHeader title={pageTitle} chipText={chipText}>
      <p slot="description">A curated selection of projects completed by Micha≈Ç Skorus, showcasing custom web applications developed for clients and personal learning. Each project highlights modern technologies and tailored solutions designed to deliver responsive and efficient web experiences.</p>
    </PageHeader>
    <div class="flex flex-col gap-8 lg:gap-32">
      <div class="hidden lg:block absolute left-[30%] w-[785px] h-[785px] z-[-1] translate-x-[-50%] translate-y-[1258px]">
        <CirclesAim />
      </div>
      {projects.map(({
        index,
        title,
        chips,
        year,
        role,
        image,
        url,
      })=>(
        <ProjectCard index={index} projectTitle={title} chips={chips} image={image} year={year} role={role} url={url} />
      ))}
    </div>
  </div>
</section>
