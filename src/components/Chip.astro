---
import { cn } from 'src/utils';

type Props = {
  text: string;
  variant?: 'normal' | 'outlined';
  // eslint-disable-next-line no-undef
  as?: keyof astroHTML.JSX.IntrinsicElements;
}

const { text = '', variant = 'normal', as = "span" } = Astro.props;
const Component = as ?? "span";
---

<Component class={cn(
  "block uppercase font-sans text-[10px] leading-[1.2] pt-1 px-1.5 bg-secondary-alt w-fit rounded-md custom-transition",
  "lg:px-2 lg:rounded-lg lg:text-[12px]",
  variant==='outlined' && "outline outline-1 outline-primary outline-offset-[-1px]"
)}>
  {text}
</Component>
