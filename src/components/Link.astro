---
import IconLink from "./IconLink.astro"

const { href="#", ...restProps } = Astro.props;
---

<a {...restProps} href={href} class="flex items-center gap-3 w-fit pr-2">
  <span class="flex flex-shrink-0 justify-center items-center w-8 h-8">
    <IconLink />
  </span>
  <span class="font-sans uppercase text-sm leading-[22px] pt-3 pb-1.5 px-0 whitespace-nowrap lg:text-base">
    <slot/>
  </span>
</a>
